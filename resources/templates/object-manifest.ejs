<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body {
            padding: 1em;
            color: var(--vscode-editor-foreground);
            background-color: var(--vscode-editor-background);
        }
    </style>
    <title>Manifest: <%= object.objectKey %></title>
</head>
<body>
    <div id="tree">
        <ul>
            <li>URN: <%= manifest.urn %></li>
            <li>Version: <%= manifest.version %></li>
            <li>Status: <%= manifest.status %></li>
            <li>Progress: <%= manifest.progress %></li>
            <li>Region: <%= manifest.region %></li>
            <li>Has Thumbnail: <%= manifest.hasThumbnail %></li>
            <li>
                Derivatives
                <ul>
                    <% for (const derivative of manifest.derivatives) { %>
                        <li>
                            Name: <%= derivative.name %>
                            <ul>
                                <li>Output Type: <%= derivative.outputType %></li>
                                <li>Status: <%= derivative.status %></li>
                                <li>Progress: <%= derivative.progress %></li>
                                <li>Has Thumbnail: <%= derivative.hasThumbnail %></li>
                                <% if (!derivative.children) continue; %>
                                <li>
                                    Children
                                    <ul>
                                        <% for (const child of derivative.children) { %>
                                            <li>GUID: <%= child.guid %></li>
                                            <ul>
                                                <li>Type: <%= child.type %></li>
                                                <li>Role: <%= child.role %></li>
                                                <li>URN: <%= child.urn %></li>
                                                <li>MIME: <%= child.mime %></li>
                                                <li>Status: <%= child.status %></li>
                                                <!-- TODO: render additional, nested children -->
                                            </ul>
                                        <% } %>
                                    </ul>
                                </li>
                            </ul>
                        </li>
                    <% } %>
                </ul>
            </li>
        </ul>
    </div>

    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>