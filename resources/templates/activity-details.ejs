<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" integrity="sha384-ggOyR0iXCbMQv3Xipma34MD+dH/1fQ784/j6cY/iJTQUOhcWr7x9JvoRxT2MZw1T" crossorigin="anonymous">
    <style>
        body, .form-control-plaintext, .table {
            color: var(--vscode-editor-foreground);
            background-color: var(--vscode-editor-background);
        }
    </style>
    <title>Activity: <%= activity.id %></title>
</head>
<body>
    <form>
        <div class="form-group row">
            <label for="activity-id" class="col-sm-2 col-form-label">ID</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="activity-id" value="<%= activity.id %>">
            </div>
            <label for="activity-version" class="col-sm-2 col-form-label">Version</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="activity-version" value="<%= activity.version %>">
            </div>
            <label for="activity-engine" class="col-sm-2 col-form-label">Engine</label>
            <div class="col-sm-10">
                <input type="text" readonly class="form-control-plaintext" id="activity-engine" value="<%= activity.engine %>">
            </div>
            <label class="col-sm-2 col-form-label">Command Line</label>
            <div class="col-sm-10">
                <% for (let i = 0; i < activity.commandLine.length; i++) { %>
                    <input type="text" readonly class="form-control-plaintext" id="<%= 'activity-command-line-' + i %>" value="<%= activity.commandLine[i] %>">
                <% } %>
            </div>
            <label class="col-sm-2 col-form-label">Parameters</label>
            <div class="col-sm-10">
                <table class="table table-sm">
                    <thead>
                        <tr>
                            <th scope="col">ID</th>
                            <th scope="col">Verb</th>
                            <th scope="col">Description</th>
                            <th scope="col">Local Name</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% for (const param of Object.keys(activity.parameters)) { %>
                            <tr>
                                <th scope="row"><%= param %></th>
                                <td><%= activity.parameters[param].verb %></td>
                                <td><%= activity.parameters[param].description %></td>
                                <td><%= activity.parameters[param].localName %></td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
            <label class="col-sm-2 col-form-label">App Bundles</label>
            <div class="col-sm-10">
                <% for (let i = 0; i < activity.appbundles.length; i++) { %>
                    <input type="text" readonly class="form-control-plaintext" id="<%= 'activity-appbundle-' + i %>" value="<%= activity.appbundles[i] %>">
                <% } %>
            </div>
        </div>
    </form>
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js" integrity="sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js" integrity="sha384-UO2eT0CpHqdSJQ6hJty5KVphtPhzWj9WO1clHTMGa3JDZwrnQq4sF86dIHNDz0W1" crossorigin="anonymous"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js" integrity="sha384-JjSmVgyd0p3pXB1rRibZUAYoIIy6OrQ6VrjIEaFf/nJGzIxFDsf4x0xIM+B07jRM" crossorigin="anonymous"></script>
</body>
</html>