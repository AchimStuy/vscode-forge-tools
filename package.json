{
	"name": "vscode-forge-tools",
	"displayName": "Autodesk Forge Tools",
	"description": "Visual Studio Code extension for accessing Autodesk Forge services and content.",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.35.0"
	},
	"categories": [
		"Other"
	],
	"activationEvents": [
		"onView:forgeDataManagementView",
		"onView:forgeDesignAutomationView"
	],
	"main": "./out/extension.js",
	"contributes": {
		"configuration": {
			"title": "Forge",
			"properties": {
				"autodesk.forge.clientId": {
					"type": "string",
					"description": "Client ID",
					"scope": "window"
				},
				"autodesk.forge.clientSecret": {
					"type": "string",
					"description": "Client Secret",
					"scope": "window"
				}
			}
		},
		"viewsContainers": {
			"activitybar": [
				{
					"id": "forgeViewContainer",
					"title": "Forge",
					"icon": "resources/logo.png"
				}
			]
		},
		"views": {
			"forgeViewContainer": [
				{
					"id": "forgeDataManagementView",
					"name": "Data Management"
				}
			]
		},
		"commands": [
			{
				"command": "forge.refreshBuckets",
				"title": "Refresh Buckets",
				"icon": {
					"light": "resources/icons/dark/refresh.svg",
					"dark": "resources/icons/light/refresh.svg"
				}
			},
			{
				"command": "forge.createBucket",
				"title": "Create Bucket",
				"icon": {
					"light": "resources/icons/dark/add.svg",
					"dark": "resources/icons/light/add.svg"
				}
			},
			{
				"command": "forge.uploadObject",
				"title": "Upload Object"
			},
			{
				"command": "forge.downloadObject",
				"title": "Download"
			},
			{
				"command": "forge.previewObject",
				"title": "Preview"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "forge.refreshBuckets",
					"when": "view == forgeDataManagementView",
					"group": "navigation"
				},
				{
					"command": "forge.createBucket",
					"when": "view == forgeDataManagementView",
					"group": "navigation"
				}
			],
			"view/item/context": [
				{
					"command": "forge.uploadObject",
					"when": "view == forgeDataManagementView && viewItem == bucket",
					"group": "navigation"
				},
				{
					"command": "forge.previewObject",
					"when": "view == forgeDataManagementView && viewItem == object",
					"group": "navigation@1"
				},
				{
					"command": "forge.downloadObject",
					"when": "view == forgeDataManagementView && viewItem == object",
					"group": "navigation@2"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "yarn run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"postinstall": "node ./node_modules/vscode/bin/install",
		"test": "yarn run compile && node ./node_modules/vscode/bin/test"
	},
	"devDependencies": {
		"@types/mocha": "^2.2.42",
		"@types/node": "^10.12.21",
		"tslint": "^5.12.1",
		"typescript": "^3.3.1",
		"vscode": "^1.1.28"
	},
	"dependencies": {
		"@types/ejs": "^2.6.3",
		"ejs": "^2.6.1",
		"forge-nodejs-utils": "^1.5.1"
	}
}
